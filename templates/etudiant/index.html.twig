{% extends 'layout/base.html.twig' %}

{% block title %}Hello EtudiantController!{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_register_etudiant') }}" class="btn btn-success">ajouter</a>
    </div>
    <table class="table table-hover">
        <thead>
        <tr class="bg-primary">
            <th scope="col">#</th>
            <th scope="col">Nom complet</th>
            <th scope="col">Matricule</th>
            <th scope="col">SEXE</th>
            <th scope="col">adresse</th>
            <th class="text-center">Action</th>
        </tr>
        </thead>
        {% for etudiant in etudiantPaginers %}
            <tbody>
            <tr>
                <th scope="row">{% set i = i+1 %} {{ i }}</th>
                <td>{{ etudiant.nomComplet }}</td>
                <td>{{ etudiant.matricule }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td class="text-center">
                    <a href="#" class="btn btn-secondary">modifier</a>
                    <a href="#" class="btn btn-danger">supprimer</a>
                    <a href="{{ path('app_etudiant_show',{id:etudiant.id}) }}" class="btn btn-info">details</a>
                </td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
    <div class="pagination">
        {{ knp_pagination_render(etudiantPaginers) }}
    </div>

{% endblock %}
